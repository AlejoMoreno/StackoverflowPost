<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.alejandro.com.helprogrammer.Pregunta"
    android:background="@drawable/fondo_negro">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/Lpregunta">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/LPtitulo">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Helprogrammer"
                android:id="@+id/Ttitulo"
                android:layout_above="@+id/searchView"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textColor="#fffaf9ff"
                android:textSize="30dp"
                android:layout_gravity="center_horizontal"
                android:gravity="center_horizontal" />
        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/TPtexto">

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:inputType="textMultiLine"
                android:ems="10"
                android:id="@+id/search"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_marginTop="80dp"
                android:layout_toLeftOf="@+id/searchView"
                android:layout_toStartOf="@+id/searchView"
                android:textColor="#fffffdfd"
                android:layout_gravity="left"
                android:hint="Search "
                android:textColorHighlight="#ffbcbcad"
                android:textColorHint="#ffbcbcad"
                android:textColorLink="#ffbcbcad" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programaci贸n Java"
                android:id="@+id/Java"
                android:textColor="#ffffffff"
                android:layout_marginTop="50dp"
                android:hint="Programaci贸n Java" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programaci贸n Python"
                android:id="@+id/Python"
                android:textColor="#ffffffff" />

            <CheckBox
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Programaci贸n C++"
                android:id="@+id/C"
                android:textColor="#ffffffff" />

        </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:gravity="center_horizontal">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Search"
                android:id="@+id/Bsearch"
                android:background="#ff232aff"
                android:textColor="#fffffcfe"
                android:layout_below="@+id/searchView"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp" />
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
